# ZeusODX Server Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/zeusodx

# Redis
# Leave unset to use localhost:6379 (local dev default)
# Set to your Redis provider URL for production (Render Redis, Upstash, Redis Cloud, etc.)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password  (optional, only if Redis requires auth)
# Set to true to disable Redis entirely (rate limiting/locks degrade gracefully)
# REDIS_DISABLED=true

# JWT Secrets
JWT_SECRET=your_jwt_secret_here_change_this_in_production
REFRESH_JWT_SECRET=your_refresh_jwt_secret_here_change_this_in_production

# SMS Service (Termii)
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=ZeusODX
TERMII_BASE_URL=https://api.ng.termii.com

# Twilio (Alternative SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# Fireblocks (Crypto Wallet)
FIREBLOCKS_API_KEY=your_fireblocks_api_key
FIREBLOCKS_KEY_PATH=/path/to/fireblocks/private/key
VAULT_ACCOUNT_ID=your_vault_account_id

# Obiex (Exchange Integration)
OBIEX_API_KEY=your_obiex_api_key
OBIEX_API_SECRET=your_obiex_api_secret
OBIEX_BASE_URL=https://api.obiex.finance
OBIEX_WEBHOOK_SECRET=your_obiex_webhook_secret

# ==============================================
# YOUVERIFY KYC INTEGRATION (CRITICAL FOR KYC)
# ==============================================
# Get these from: https://youverify.co/dashboard
# 1. Sign up at https://youverify.co
# 2. Go to Settings -> API Keys
# 3. Copy your Public Merchant Key and Secret Key
# 4. Set up webhook URL in Youverify dashboard

# Your Youverify Public Merchant Key (starts with YV_PUB_)
# Used for: API requests TO Youverify
YOUVERIFY_PUBLIC_MERCHANT_KEY=YV_PUB_your_key_here

# Your Youverify Secret Key (starts with YV_SEC_) - KEEP THIS SECRET!
# Used for: Advanced API operations (optional)
YOUVERIFY_SECRET_KEY=YV_SEC_your_secret_here

# Your Youverify Webhook Signing Key - KEEP THIS SECRET!
# Used for: Verifying webhook signatures FROM Youverify
# Get this from: Settings → Webhooks in Youverify dashboard
YOUVERIFY_WEBHOOK_SIGNING_KEY=your_webhook_signing_key_here

# Webhook URL - This is where Youverify will send verification results
# Production: https://your-production-domain.com/kyc-webhook/callback
# Development: Use ngrok or similar to expose localhost
YOUVERIFY_CALLBACK_URL=https://your-domain.com/kyc-webhook/callback

# Youverify API Base URL (usually no need to change)
YOUVERIFY_API_URL=https://api.youverify.co

# ==============================================
# EMAIL SERVICE (Brevo / Sendinblue)
# ==============================================
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key
SENDER_EMAIL=noreply@zeusodx.com
SENDER_NAME=ZeusODX
COMPANY_NAME=ZeusODX
SUPPORT_EMAIL=support@zeusodx.com
APP_WEB_BASE_URL=https://your-web-domain.com
APP_DEEP_LINK=zeusodx://

# Brevo Template IDs (numeric IDs from your Brevo account)
# Templates → select template → ID shown in the URL or template list
BREVO_TEMPLATE_SIGNUP=1
BREVO_TEMPLATE_EMAIL_VERIFICATION=2
BREVO_TEMPLATE_LOGIN=3
BREVO_TEMPLATE_KYC=4
BREVO_TEMPLATE_KYC_PROVISIONAL=5
BREVO_TEMPLATE_NIN_VERIFICATION=6
BREVO_TEMPLATE_DEPOSIT=7
BREVO_TEMPLATE_WITHDRAWAL=8
BREVO_TEMPLATE_UTILITY=9
BREVO_TEMPLATE_GIFTCARD=10
BREVO_TEMPLATE_GIFTCARD_SUBMISSION=11
BREVO_TEMPLATE_GIFTCARD_APPROVED=12
BREVO_TEMPLATE_GIFTCARD_REJECTED=13
BREVO_TEMPLATE_GIFTCARD_ADMIN_NOTIFY=14
# Comma-separated list of admin emails to notify on giftcard submissions
# Format: email:Name,email:Name  (name is optional, falls back to email)
# Example: tony@zeusodx.com:Tony,odion@zeusodx.com:Odion
GIFTCARD_ADMIN_EMAILS=tony@zeusodx.com:Tony,odion@zeusodx.com:Odion
BREVO_TEMPLATE_ADMIN_WELCOME=15

# ==============================================
# IMPORTANT SETUP INSTRUCTIONS FOR YOUVERIFY
# ==============================================
# After getting your credentials:
# 1. Login to https://youverify.co/dashboard
# 2. Navigate to Settings -> Webhooks
# 3. Add webhook URL: https://your-domain.com/kyc-webhook/callback
# 4. Select events: "Identity Verification Completed"
# 5. Save and test the webhook
# 6. Make sure your server is publicly accessible (use ngrok for local testing)
